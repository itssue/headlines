<h1>All Articles</h1>

  <p><%= link_to "Add New Article", new_article_path %></p>

  <table>
    <tr>
      <td>Title</td>
      <td>Link</td>
      <td>Gif</td>
      <td> </td>
    </tr>
   
    <% @articles.each do |article| %>
      <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.link %></td>
      <td><%= article.gif %></td>
      <td><%= link_to "Send Text", notifications_path(article_id: article.id), method: :post %></td>
      </tr>
    <% end %>
  </table><br>


