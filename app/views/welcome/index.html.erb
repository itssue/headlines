<h1>News is overwhelming.</h1>
<p>News is overwhelming.</p>


	<% if user_signed_in? %>
		<p>Thank you for signing up.</p>
		<%= link_to('Edit', edit_user_registration_path) %> <br>
		<%= link_to('Logout', destroy_user_session_path, :method => :delete) %> 
	<% else %>
		<p>If you're interested, sign up here.</p>
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>
		  
		  <div>
		  <p>Mobile number<br />
		  <%= f.text_field :mobile_number %>
		  </p>
		  </div>
		  
		  <div>
		  <p>Email<br />
		  <%= f.email_field :email %>
		  </p>
		  </div>

		  <div>
		  <p>Password<br />
		  <%= f.password_field :password %>
		  </p>
		  </div>

		<div><%= f.submit "Sign up" %></div>
		<p>If you have already signed up, <%= link_to "sign in here.", user_session_path %>
		<% end %>
	<% end %>
